#!/bin/bash

user=haid
host=sthaid-rs.dyndns.org

echo
echo "----------- INSTALL_CLOUD_SERVER ----------"

echo
echo SEND TAR FILE TO $user@$host
scp -p \
  cloud_server.c p2p1.c util.c wc.h Makefile \
  $user@$host:proj_cam

echo
echo STOP CLOUD_SERVER 
ssh $user@$host sudo service cloud_server stop

echo 
echo BUILD 
ssh $user@$host "cd proj_cam; make cloud_server"

echo
echo START CLOUD_SERVER 
ssh $user@$host sudo service cloud_server start

echo
echo STATUS CLOUD_SERVER
ssh $user@$host sudo service cloud_server status

